@model IEnumerable<ZenithSociety.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Activity.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eventFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eventTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.createEvent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Activity.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.eventFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.eventTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.createEvent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.eventId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.eventId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.eventId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
